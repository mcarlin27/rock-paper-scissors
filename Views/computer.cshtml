@{
  Layout="Shared/_Layout.cshtml";
}

<div class="jumbotron">
  <h1>Rock, Paper, Scissors</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <h2>You</h2>
      <form class="" action="/computer" method="post">
        <div class="radio">
          <input type="radio" name="player-one" value="Rock">
          <label>Rock</label>
        </div>
        <div class="radio">
          <input type="radio" name="player-one" value="Paper">
          <label>Paper</label>
        </div>
        <div class="radio">
          <input type="radio" name="player-one" value="Scissors">
          <label>Scissors</label>
        </div>
        <br>
        <button type="submit" name="button" class="btn btn-default btn-lg">Play Game!</button>
      </form>
    </div>
    <div class="col-md-2">
    </div>
  </div>

  <h4>You played: @Model.GetPlayer1()</h4>
  <h4>The Computer played: @Model.GetComputer()</h4>
  <h3>@Model.GetVsAI()</h3>

  <p><a href="/">Play against a friend!</a></p>
</div>
